pipeline {
    agent any

    stages {
        stage ('SCM') {
            steps {
                git branch: 'master', url: 'https://github.com/C2-80452/jenkins-repo.git'
            }
        }
        stage ('docker login') {
            steps {
                sh 'echo dckr_pat_vIV7zX6UYNu0aE6XC4_SFr-Gi84 | /usr/bin/docker login -u shivendra013 --password-stdin'
            }
        }
        stage ('docker build image') {
            steps {
                sh '/usr/bin/docker image build -t shivendra013/imyimages .'
            }
        }
        stage ('docker push image') {
            steps {
                sh '/usr/bin/docker image push shivendra013/imyimages'
            }
        }
        stage ('docker remove service') {
            steps {
                sh '/usr/bin/docker service rm myserivces'
            }
        }
        stage ('docker create service') {
            steps {
                sh '/usr/bin/docker service create --name myservice -p 9090:80 --replicas 5 shivendra013/imyimages'
            }
        }
    }
}
